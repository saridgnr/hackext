{
    "name": "Rampa - Accessibility",
    "version": "1.0",
    "description": "The extension turns websites to accessible according to your chosen settings.",
    "permissions": ["activeTab", "declarativeContent", "storage", "tabs"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "options_page": "options.html",
    "page_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "18": "images/icons/baseline_accessibility_new_black_18dp.png",
        "24": "images/icons/baseline_accessibility_new_black_24dp.png",
        "36": "images/icons/baseline_accessibility_new_black_48dp.png",
        "48": "images/icons/baseline_accessibility_new_black_36dp.png"
      }
    },
    "icons": {
      "18": "images/icons/baseline_accessibility_new_black_18dp.png",
      "24": "images/icons/baseline_accessibility_new_black_24dp.png",
      "36": "images/icons/baseline_accessibility_new_black_48dp.png",
      "48": "images/icons/baseline_accessibility_new_black_36dp.png"
    },
    "manifest_version": 2
  }